{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "peak-health",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "node scripts/cleanup-dev-ports.mjs && turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:adopt": "UPDATE_ADOPTION_BLACKLIST=true eslint .",
    "type-check": "turbo type-check",
    "test:unit": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "turbo run test:e2e --filter @peakhealth/e2e",
    "test:e2e:update-snapshots": "turbo run test:update-snapshots --filter @peakhealth/e2e",
    "prepare": "husky",
    "supabase:start": "supabase start",
    "setup-dev-db": "node scripts/setup-dev-db.mjs",
    "cleanup": "node scripts/cleanup-dev-ports.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@next/eslint-plugin-next": "^15.4.6",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vercel/microfrontends": "^2.0.0",
    "dotenv": "^17.2.1",
    "es-file-traverse": "^1.2.0",
    "eslint": "^9.33.0",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-code-complete": "^1.1.0",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-const-case": "^1.2.2",
    "eslint-plugin-css-modules": "^2.12.0",
    "eslint-plugin-depend": "^1.2.0",
    "eslint-plugin-diff": "^2.0.3",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-pii": "^1.0.2",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-rule-adoption": "^1.1.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0"
  },
  "packageManager": "pnpm@10.14.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
