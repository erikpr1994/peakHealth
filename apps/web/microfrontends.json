{
  "$schema": "https://openapi.vercel.sh/microfrontends.json",
  "applications": {
    "peak-health": {
      "packageName": "@peakhealth/web",
      "development": {
        "fallback": "https://peak-health.vercel.app"
      }
    },
    "peak-health-landing": {
      "packageName": "@peakhealth/landing",
      "development": {
        "fallback": "https://peak-health-landing.vercel.app"
      },
      "routing": [
        {
          "paths": [
            "/en",
            "/es",
            "/en/blog",
            "/en/blog/:path*",
            "/es/blog",
            "/es/blog/:path*",
            "/en/features",
            "/es/features",
            "/en/roadmap",
            "/es/roadmap",
            "/en/feedback",
            "/es/feedback",
            "/en/careers",
            "/es/careers",
            "/en/contact",
            "/es/contact",
            "/en/help",
            "/es/help",
            "/en/privacy",
            "/es/privacy",
            "/en/terms",
            "/es/terms",
            "/en/vision",
            "/es/vision"
          ]
        }
      ]
    }
  }
}
