if [ $LINT_STAGED_EXIT_CODE -ne 0 ]; then
  echo "âŒ Lint-staged failed"
  exit $LINT_STAGED_EXIT_CODE
fi

echo "ğŸ—ï¸ Running build..."
pnpm build
