{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Configuration for Packages",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Override for packages that need to compile
    "moduleResolution": "node",

    // Output settings for packages
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",

    // Emit for packages
    "noEmit": false
  }
}
