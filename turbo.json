{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.config.{ts,js,mjs}",
        "**/*.config.{ts,js,mjs}.json"
      ]
    },
    "type-check": {
      "inputs": [
        "src/**/*.{ts,tsx}",
        "**/*.config.{ts,js,mjs}",
        "tsconfig.json"
      ]
    },
    "supabase:start": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["supabase:start"]
    },
    "dev:microfrontends": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.test.{ts,tsx,js,jsx}",
        "**/*.spec.{ts,tsx,js,jsx}"
      ]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
