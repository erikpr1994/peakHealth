{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": [
        "@peakhealth/ui#build",
        "@peakhealth/auth-types#build",
        "@peakhealth/auth-utils#build"
      ],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.config.{ts,js,mjs}",
        "**/*.config.{ts,js,mjs}.json"
      ],
      "env": ["ESLINT_FLAGS"]
    },
    "type-check": {
      "dependsOn": [
        "@peakhealth/ui#build",
        "@peakhealth/auth-types#build",
        "@peakhealth/auth-utils#build"
      ],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "**/*.config.{ts,js,mjs}",
        "tsconfig.json"
      ]
    },
    "supabase:start": {
      "cache": false
    },
    "cleanup": {
      "cache": false
    },
    "setup-dev-db": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["supabase:start"],
      "cache": false,
      "persistent": true
    },
    "//#proxy": {
      "cache": false
    },
    "test": {
      "dependsOn": [
        "@peakhealth/ui#build",
        "@peakhealth/auth-types#build",
        "@peakhealth/auth-utils#build"
      ],
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.test.{ts,tsx,js,jsx}",
        "**/*.spec.{ts,tsx,js,jsx}"
      ]
    },
    "test:e2e": {
      "cache": false,
      "outputs": []
    },
    "test:coverage": {
      "cache": false,
      "outputs": []
    }
  }
}
