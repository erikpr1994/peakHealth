{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## 🧰 Maintenance",
      "labels": [
        "chore",
        "refactor",
        "documentation",
        "style",
        "test",
        "build",
        "ci"
      ]
    },
    {
      "title": "## 🔄 Dependencies",
      "labels": ["dependencies"]
    }
  ],
  "ignore_labels": ["ignore"],
  "sort": "ASC",
  "template": "${{CHANGELOG}}\n\n**Full Changelog**: ${{RELEASE_DIFF}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature|enhancement)(.*):",
      "target": "feature"
    },
    {
      "pattern": "^fix(.*):",
      "target": "fix"
    },
    {
      "pattern": "^(chore|refactor|style)(.*):",
      "target": "chore"
    },
    {
      "pattern": "^(docs|documentation)(.*):",
      "target": "documentation"
    },
    {
      "pattern": "^test(.*):",
      "target": "test"
    },
    {
      "pattern": "^(build|ci)(.*):",
      "target": "build"
    },
    {
      "pattern": "^(deps|dependencies)(.*):",
      "target": "dependencies"
    }
  ],
  "duplicate_filter": {
    "pattern": "\\[bot\\]",
    "on_property": "author",
    "method": "match"
  },
  "transformers": [
    {
      "pattern": "\\[Security\\]",
      "target": "🔒 Security"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365
}
